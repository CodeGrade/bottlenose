#!/usr/bin/perl
# -*- perl -*-
use 5.18.0;
use warnings FATAL => 'all';
use IO::Handle;

open my $shell, "|-", "su -c bash ubuntu";
while (<DATA>) {
    chomp;
    $shell->say($_);
}
close $shell;

__DATA__
export COOKIE="<%= cookie %>"
export TIMEOUT="<%= timeout %>"
export SUB="<%= sub_name %>"
export GRA="<%= gra_name %>"

<% if xtr_name %>
export XTR="<%= xtr_name %>"
<% end %>

cd ~
wget --no-check-certificate -O "$SUB" "<%= sub_url %>"
wget --no-check-certificate -O "$GRA" "<%= gra_url %>"
<% if xtr_name && xtr_url %>
wget --no-check-certificate -O "$XTR" "<%= xtr_url %>"
<% end %>
tar xzvf "$GRA"
ruby -I_grading _grading/grade.rb
