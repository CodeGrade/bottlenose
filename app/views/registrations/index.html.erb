<% @page_title = "Registrations" %>
<% cur_reg = current_user.registration_for(@course) %>

<h2>Registrations

<%= link_to "Register students", new_course_registration_path, class: 'btn
    btn-success pull-right' %>
</h2>
<div class="row">
  <div class="col-md-12">
    <%= render "reg_requests/table", requests: @requests %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= render "users/table", header: "Students", role: "student", course: @course, users: @students %>
  </div>
  <div class="col-md-6">
    <%= render "users/table", header: "Staff", role: @role, course: @course, users: @staff %>
  </div>
</div>
