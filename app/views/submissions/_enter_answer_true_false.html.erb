<div class="form-inline">
  <% value = @answers&.dig(sub_id.to_s, index, "main")&.capitalize %>
  <input type="hidden" name="answers[<%= sub_id %>][<%= index %>][main]"
         id="answer_<%= sub_id %>_<%= index %>_main" <% if value %>value="<%= value %>"<% end %>>
  <button type="button" class="answer btn btn-default <%= if value == 'True' then 'active' elsif @answers && value.nil? then 'unanswered' end %>"
          data-id="answer_<%= sub_id %>_<%= index %>_main">True</button>
  <button type="button" class="answer btn btn-default <%= if value == 'False' then 'active' elsif @answers && value.nil? then 'unanswered' end %>"
          data-id="answer_<%= sub_id %>_<%= index %>_main">False</button>
</div>
