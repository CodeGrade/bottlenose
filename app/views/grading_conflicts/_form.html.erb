<%= form_for :grading_conflict do |f| %>

    <div class="form-group">
        <label for="staff" class="input-label"></label>
        <% # TODO: Substitute :name with display_name? %>
        <%= f.select :staff_id, class: "form-control" do%>
            <% @tas_and_graders.each do |stf| %>
                <%= attribs = {value: stf.id} %>
                <%= content_tag :option, attribs do stf.display_name end %>
            <% end %>
        <% end %>
    </div>

    <div class="form-group">
        <%= f.submit "Create Conflict", id: "submit-button", class: "btn btn-success" %>
    </div>

<% end %>